  "cascading_rules": {
    "critical_station_down": {
      "description": "Critical station failure affects entire line",
      "trigger": {
        "station_critical": true,
        "availability_delta": "< -0.3"
      },
      "effects": [
        {
          "target": "line",
          "availability_multiplier": 0.6,
          "performance_multiplier": 0.8,
          "alarms": ["CRITICAL_STATION_FAULT", "LINE_DEGRADED"]
        },
        {
          "target": "downstream_stations",
          "availability_multiplier": 0.7,
          "alarms": ["UPSTREAM_BLOCKAGE"]
        }
      ]
    },
    "material_shortage": {
      "description": "Material shortage starves downstream stations",
      "trigger": {
        "event_type": "material_shortage"
      },
      "effects": [
        {
          "target": "line",
          "performance_multiplier": 0.5,
          "alarms": ["MATERIAL_SHORTAGE"]
        },
        {
          "target": "downstream_stations",
          "state": "STARVED",
          "alarms": ["WAITING_FOR_MATERIAL"]
        }
      ]
    },
    "quality_issue": {
      "description": "Quality issue increases rework load",
      "trigger": {
        "event_category": "quality_issue"
      },
      "effects": [
        {
          "target": "line",
          "quality_multiplier": 0.85,
          "alarms": ["QUALITY_ALERT"]
        },
        {
          "target": "inspection_stations",
          "cycle_time_multiplier": 1.3,
          "alarms": ["INCREASED_INSPECTION"]
        }
      ]
    }
  },
