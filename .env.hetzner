# Hetzner Production Environment Configuration
# Copy this to .env on Hetzner server

APP_HOST=0.0.0.0
APP_PORT=8000
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ragdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ragdb

# Legacy DB variables (for compatibility)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ragdb

CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_COLLECTION=rag_core
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2

# Ollama LLM Configuration - Use Docker Ollama on Hetzner
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
ENABLE_RERANK=true
ENABLE_CLOUD_FALLBACK=false

# OPC UA Configuration - Internal Docker endpoint for OPC Studio
OPC_DEMO_ENDPOINT=opc.tcp://opc-studio:4840/shopfloor/opc-studio

# SQL KPI Tool (Read-Only MES Data)
SQL_KPI_ENABLED=true
POSTGRES_REPLICA_HOST=postgres
POSTGRES_REPLICA_PORT=5432
POSTGRES_REPLICA_DB=ragdb
POSTGRES_REPLICA_USER=postgres
POSTGRES_REPLICA_PASSWORD=postgres
POSTGRES_REPLICA_DRIVER=postgresql+psycopg2
